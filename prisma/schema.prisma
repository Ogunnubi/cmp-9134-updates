generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  image     String?
  searches  Search[]
}

model Search {
  id        String   @id @default(cuid())
  term      String
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
}



datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
